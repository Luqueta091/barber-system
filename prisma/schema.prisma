generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbeiro {
  id               String             @id @default(uuid())
  nome             String
  telefone         String
  ativo            Boolean
  corAgenda        String?
  horariosTrabalho HorarioTrabalho[]
  agendamentos     Agendamento[]
}

model Cliente {
  id         String         @id @default(uuid())
  nome       String
  telefone   String
  ativo      Boolean
  bloqueado  Boolean
  faltas     Int
  agendamentos Agendamento[]
}

model Servico {
  id     String   @id @default(uuid())
  nome   String
  duracao Int
  preco  Decimal
  ativo  Boolean
  agendamentos Agendamento[]
}

model HorarioTrabalho {
  id         String   @id @default(uuid())
  barbeiroId String
  diaSemana  Int
  horaInicio DateTime
  horaFim    DateTime
  barbeiro   Barbeiro @relation(fields: [barbeiroId], references: [id])
}

model Agendamento {
  id            String   @id @default(uuid())
  barbeiroId    String
  clienteId     String
  servicoId     String
  dataHoraInicio DateTime
  dataHoraFim    DateTime
  status        String
  origem        String
  observacoes   String?
  barbeiro      Barbeiro @relation(fields: [barbeiroId], references: [id])
  cliente       Cliente  @relation(fields: [clienteId], references: [id])
  servico       Servico  @relation(fields: [servicoId], references: [id])
}
